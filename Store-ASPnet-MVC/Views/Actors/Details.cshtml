@model Actor
@{
    ViewData["Title"] = "Add a new actor";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Подробности о @Model.FullName</h1>
        </p>
        <div class="row">
                    <div class="form-group text-center">
                        <img class="border-info rounded-circle" style="max-width: 150px" id="PictureProfilePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureProfileURL" class="control-label"></label>
                        <input asp-for="PictureProfileURL" class="form-control" readonly/>
                        <span asp-validation-for="PictureProfileURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly/>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biography" class="control-label"></label>
                        <input asp-for="Biography" class="form-control" readonly/>
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
                        <a class="btn btn-outline-secondary" asp-action="Index">Показать всех</a>
                    </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PictureProfileURL');
            output.src = $("#PictureProfileURL").val();
        })
    </script>
}
